<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#778899"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/vcm2"
            android:scaleType="fitXY"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="45sp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:textColor="#000"
            android:text="Pressure Analysis"/>
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/press"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="200dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arc_progress"
                android:background="#778899"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                custom:arc_progress="69"
                custom:arc_finished_color="#000"
                custom:arc_bottom_text_size="20sp"
                custom:arc_text_color="@color/colorPrimaryDark"
                custom:arc_unfinished_color="#fff"
                custom:arc_bottom_text="PRESSURE"/>
        </LinearLayout>
    </LinearLayout>